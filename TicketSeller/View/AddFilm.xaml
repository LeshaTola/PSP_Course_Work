                MinimumValue="1.0"
                MaximumValue="100.0"
                MaximumDecimalPlaces="2" />
            </Entry.Behaviors>
        </Entry>-->
        <!--<Picker Title="Cinema" FontSize="14" FontAttributes="Bold"/>
        <Picker Title="Hall" FontSize="14" FontAttributes="Bold"/>-->
