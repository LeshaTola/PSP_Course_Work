<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicketSeller.View.AddHall"
             Title="AddHall">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
        <Label Text="Add Hall" FontAttributes="Bold" FontSize="Large" HorizontalTextAlignment="Center"/>
        <Entry Placeholder="Columns" Keyboard="Numeric"/>
        <Entry Placeholder="Rows" Keyboard="Numeric"/>
        
        <Button Text = "Add" FontAttributes="Bold"/>
    </VerticalStackLayout>
    
</ContentPage>