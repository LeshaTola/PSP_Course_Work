<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicketSeller.View.AddUser"
             Title="AddUser">
    <VerticalStackLayout Spacing="20" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
        <Label Text="Add User" FontAttributes="Bold" FontSize="Large"/>
        <Entry Placeholder="Login"/>
        <Entry Placeholder="Email"/>
        <Entry Placeholder="Password"/>
        <HorizontalStackLayout Spacing="30">
            <Label Text="ADMIN" VerticalOptions="Center" FontSize="20"/>
            <CheckBox />
        </HorizontalStackLayout>
        <Button Text = "Add" FontAttributes="Bold" Clicked="UserAdded"/>
    </VerticalStackLayout>
</ContentPage>