<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicketSeller.View.Authorization"
             Title="Authorization">
    <VerticalStackLayout HorizontalOptions="Center" Spacing="30" VerticalOptions="Center">
        <Label Text="Authorization" FontSize="30" FontAttributes="Bold"/>
        <Entry Placeholder="login"  />
        <Entry Placeholder="password" IsPassword="True"/>
        <Label Text="forgot your password?"/>

        <Button CornerRadius="20" Text="Enter" FontAttributes="Bold" />

    </VerticalStackLayout>
</ContentPage>