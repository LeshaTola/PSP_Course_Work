<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TicketSeller.View.AddHall"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:TicketSeller.ViewModel.Halls"
    Title="{Binding Title}"
    x:DataType="viewModel:AddHallViewModel">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="10"
        VerticalOptions="Center">
        <Label
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="Add Hall" />
        <Entry
            Keyboard="Numeric"
            Placeholder="Рядов"
            Text="{Binding Hall.Rows}" />
        <Entry
            Keyboard="Numeric"
            Placeholder="Мест"
            Text="{Binding Hall.Columns}" />
        <Picker
            Title="Кинотеатр"
            ItemsSource="{Binding Cinemas}"
            SelectedItem="{Binding Hall.Cinema}" />

        <Button
            Command="{Binding UpsertCommand}"
            FontAttributes="Bold"
            Text="Подтвердить" />
    </VerticalStackLayout>

</ContentPage>