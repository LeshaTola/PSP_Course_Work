<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:TicketSeller.ViewModel"
             x:DataType="viewModel:AdminPageViewModel"
             x:Class="TicketSeller.View.Admin"
             Title="AdminPage">
    <VerticalStackLayout Spacing="10" VerticalOptions="CenterAndExpand">
        <Button Text="Users" WidthRequest="200" FontAttributes="Bold"/>
        <Button Text="Cinemas" WidthRequest="200" FontAttributes="Bold" />
        <Button Text="Halls" WidthRequest="200" FontAttributes="Bold"/>
        <Button Text="Films" WidthRequest="200" FontAttributes="Bold"  Command="{Binding GoToFilmsPageCommand}"/>
        <Button Text="Sessions" WidthRequest="200" FontAttributes="Bold"/>
    </VerticalStackLayout>
</ContentPage>