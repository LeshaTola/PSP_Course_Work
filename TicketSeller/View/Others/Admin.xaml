<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TicketSeller.View.Admin"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:TicketSeller.ViewModel"
    Title="{Binding Title}"
    x:DataType="viewModel:AdminViewModel">
    <VerticalStackLayout Spacing="10" VerticalOptions="CenterAndExpand">
        <Button
            Command="{Binding GoToUsersPageCommand}"
            FontAttributes="Bold"
            Text="Пользователи"
            WidthRequest="200" />
        <Button
            Command="{Binding GoToCinemasPageCommand}"
            FontAttributes="Bold"
            Text="Кинотеатры"
            WidthRequest="200" />
        <Button
            FontAttributes="Bold"
            Text="Залы"
            WidthRequest="200" />
        <Button
            Command="{Binding GoToFilmsPageCommand}"
            FontAttributes="Bold"
            Text="Фильмы"
            WidthRequest="200" />
        <Button
            FontAttributes="Bold"
            Text="Сеансы"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>