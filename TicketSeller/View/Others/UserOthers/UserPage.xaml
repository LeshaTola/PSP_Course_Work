<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TicketSeller.View.Others.UserOthers.UserPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:TicketSeller.ViewModel.UserOthers"
    Title="{Binding Title}"
    x:DataType="viewModel:UserPageViewModel">

    <VerticalStackLayout Spacing="10" VerticalOptions="CenterAndExpand">
        <Button
            Command="{Binding GoToAboutMePageCommand}"
            FontAttributes="Bold"
            Text="Обо мне"
            WidthRequest="200" />
        <Button
            Command="{Binding GoToUserFilmsPageCommand}"
            FontAttributes="Bold"
            Text="Заказать билет"
            WidthRequest="200" />
        <Button
            Command="{Binding GoToUserHistoryPageCommand}"
            FontAttributes="Bold"
            Text="Посмотреть историю"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>