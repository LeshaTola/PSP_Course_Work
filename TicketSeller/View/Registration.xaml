<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicketSeller.View.Registration"
             Title="Registration">
    <VerticalStackLayout HorizontalOptions="Center" Spacing="30" VerticalOptions="Center">
        <Label Text="Registration" FontSize="30" FontAttributes="Bold"/>
        <Entry Placeholder="login"/>
        <Entry Placeholder="Email"/>
        <Entry Placeholder="password" IsPassword="True"/>
        <Entry Placeholder="confirm password" IsPassword="True"/>
        <Button CornerRadius="20" Text="Register" FontAttributes="Bold" />

    </VerticalStackLayout>
</ContentPage>