<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:TicketSeller.ViewModel.Users"
             x:DataType="viewModel:AddUserViewModel"
             x:Class="TicketSeller.View.AddUser"
             Title="{Binding Title}">
    <VerticalStackLayout Spacing="20" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
        <Label Text="Редактировать пользователя" FontAttributes="Bold" FontSize="Large"/>
        <Entry Placeholder="Логин" Text="{Binding User.Login}"/>
        <Entry Placeholder="Email" Text="{Binding User.Email}"/>
        <Entry Placeholder="Пароль" Text="{Binding User.Password}"/>
        <HorizontalStackLayout Spacing="30">
            <Label Text="ADMIN" VerticalOptions="Center" FontSize="20"/>
            <CheckBox IsChecked="{Binding User.IsAdmin}"/>
        </HorizontalStackLayout>
        <Button Text = "Подтвердить" FontAttributes="Bold" Command="{Binding UpsertUserCommand}"/>
    </VerticalStackLayout>
</ContentPage>